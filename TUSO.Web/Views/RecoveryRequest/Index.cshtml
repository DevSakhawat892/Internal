@using TUSO.Domain.Dto
@model TUSO.Domain.Dto.RecoveryRequestDto

@{
    ViewData["Title"] = "Recovery Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

/*
 * Created by: Emon
 * Date created: 19.09.2022
