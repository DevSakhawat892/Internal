                                    <h4 class="card-title">Change profile picture</h4>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">
                                       
                                    </p>
                                    <button id="clear-dropzone" class="btn btn-outline-primary mb-1">
                                        <i data-feather="trash" class="me-25"></i>
                                        <span class="align-middle">Clear</span>
                                    </button>

                                    <form asp-action="Index" asp-controller="ProfilePicture" method="post" enctype="multipart/form-data" class="dropzone dropzone-area" id="dpz-remove-all-thumb">
