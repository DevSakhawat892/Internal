                                       <div class="mb-1">
                                          <label class="form-label" asp-for="ProfilePictures">Upload Picture</label>
                                          <input id="profilePictures" type="file" value="" class="form-control" asp-for="ProfilePictures" autocomplete="off" />
                                          <span asp-validation-for="ProfilePictures" class="text-danger"></span>
                                       </div>
                                    <button type="submit" value="submit" class="btn btn-primary data-submit me-1 mt-2" name="ProfilePicture">
                                       Upload
                                    </button>
                                    <a asp-action="Details" asp-controller="UserAccount" class="btn btn-sm btn-primary mt-2 rounded-0 text-uppercase"><i class="fas fa-fast-backward"></i> Back </a>
