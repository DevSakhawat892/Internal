@using TUSO.Domain.Entities
@model TUSO.Domain.Entities.Province
@*@model IEnumerable<TUSO.Domain.Entities.Province>*@

@{
   ViewData["Title"] = "Province";
   Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
   var Countries = ViewBag.Country as List<Country> ?? new List<Country>();
}

<script src="~/app-assets/vendors/js/jquery/jquery.min.js"></script>
<script src="~/js/Province.js"></script>

<!-- BEGIN: Content-->
<div class="app-content content ">
   <div class="content-overlay"></div>
   <div class="header-navbar-shadow"></div>
   <div class="content-wrapper container-xxl p-0">
      <div class="content-header row">
         <div class="content-header-left col-md-9 col-12 mb-2">
            <div class="row breadcrumbs-top">
               <div class="col-12">
                  <div class="breadcrumb-wrapper">
                     <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                           <a href="#">Configure</a>
                        </li>

                        <li class="breadcrumb-item active"> Province </li>
                     </ol>
                  </div>
               </div>
            </div>
         </div>
      </div>

      <div class="content-body">
         <!-- Validation -->
         <section class="bs-validation">
            <div class="row">
               <div class="col-12">
                  <div class="row" id="basic-table">
                     <div class="col-12">
                        <div class="card">
                           <div class="card-header">
                              <h4 class="card-title">Province</h4>
                           </div>
                           <div class="card-body">
                              <div class="table-responsive">
                                 <table class="table datatables-basic">
                                    <thead>
                                       <tr>
                                          <th>Sl</th>
                                          <th>Country</th>
                                          <th>Province</th>
                                          <th>Action</th>
                                       </tr>
                                    </thead>

                                    <tbody id="provinceDataTable">
@*                                       @foreach (var item in Model)
                                       {
                                          <tr>
                                             <td>
                                                @Html.DisplayFor(modelItem => item.OID)
                                             </td>
                                             <td>
                                                <a asp-action="Edit" asp-route-id="@item.OID">Edit</a> |
                                                <a asp-action="Details" asp-route-id="@item.OID">Details</a> |
                                                <a asp-action="Delete" asp-route-id="@item.OID">Delete</a>
                                             </td>
                                          </tr>
                                       }*@
                                    </tbody>
                                 </table>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>

               <div class="modal modal-slide-in fade" id="modals-slide-in">
                  <div class="modal-dialog sidebar-sm">
                     <form id="jquery-val-form" method="post" class="add-new-record modal-content pt-0">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">×</button>
                        <div class="modal-header mb-1">
                           <h5 class="modal-title">Province</h5>
                        </div>
                        <div class="modal-body flex-grow-1">
                           <div class="mb-1">
                              <input id="oid" type="hidden" asp-for="OID" />
                              <label class="form-label" for="Province">Country Name</label>
                              <select asp-for="CountryID" id="countryID" asp-items="@(new SelectList(Countries,"OID","CountryName"))" class="form-select">
                                 <option value="">Select</option>
                              </select>
                              <span asp-validation-for="CountryID" class="text-danger"></span>
                           </div>

                           <div class="mb-1">
                              <label class="form-label" asp-for="ProvinceName">Province Name</label>
                              <input id="provinceName" type="text" value="" class="form-control" placeholder="Province name" asp-for="ProvinceName" autocomplete="off" />
                              <span asp-validation-for="ProvinceName" class="text-danger"></span>
                           </div>

                           <button type="submit" class="btn btn-primary data-submit me-1" asp-controller="Province" asp-action="Create" action="POST">Submit</button>
                           <button type="reset" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        </div>
                     </form>
                  </div>
               </div>            
            </div>
         </section>
      </div>
   </div>
</div>
